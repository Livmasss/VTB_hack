<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VTB_hack" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>

        <item name="floatingActionButtonStyle">@style/FloatActionButton</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Base.Theme.VTB_hack</item>

        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.VTB_hack" parent="Base.Theme.VTB_hack" />

    <style name="ImageButton" parent="ImageButton.NoTint">


    </style>

    <style name="ImageButton.NoTint" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>

        <item name="backgroundTint">@color/blue</item>

        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="FloatActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="tint">@color/white</item>
    </style>

</resources>